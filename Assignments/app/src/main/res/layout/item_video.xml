<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://sch*emas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app1:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:contentDescription="@string/content_video"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_upvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Upvote" />

            <TextView
                android:id="@+id/tv_downvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="123 Downvote" />

            <!--<TextView
                android:id="@+id/down_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_up_vote" />

            <TextView
                android:id="@+id/up_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/zero_up_vote" />-->

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>